{
  "moduleFileExtensions": ["js", "json", "ts", "node"],
  "rootDir": ".",
  "useStderr": true,
  "testEnvironment": "node",
  "testRegex": ".*/*.spec.ts$",
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1"
  },
  "testTimeout": 60000
}
